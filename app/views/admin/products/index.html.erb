<h1><%= t('activerecord.models.product').pluralize %></h1>

<%= link_to t(:create), new_admin_product_path %>

<ul>
  <% for product in @products %>
  <li id="product_<%= product.id %>">
    <%= link_to product.name, admin_product_path(product) %>
    | <%= link_to t(:edit), edit_admin_product_path(product) %>
    | <%= link_to t(:remove), admin_product_path(product), :method => 'delete', :confirm => t(:product_removal_confirmation) %>
  </li>
  <% end %>
</ul>
