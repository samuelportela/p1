<!DOCTYPE html>
<html>
<head>
  <title><%= "#{t('project_name')} - #{t('admin_system')}" %></title>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script>
    $.i18n.properties({
      name: 'messages',
      language: '<%= I18n.locale %>',
      path: '/messages/',
      mode: 'both'
    });
  </script>
</head>
<body>

<%= render 'header' %>

<% if user_signed_in? &&
    (current_user.is?(:administrator) || current_user.is?(:analyzer)) %>
  <%= render 'menu' %>
<% end %>

<%= yield %>

</body>
</html>
