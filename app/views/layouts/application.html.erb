<!DOCTYPE html>
<html>
<head>
  <title><%= t(:project_name) %></title>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script>
    $.i18n.properties({
      name: 'messages',
      language: '<%= I18n.locale %>',
      path: '/messages/',
      mode: 'both'
    });
  </script>
</head>
<body>

<% if flash.any? %>
  <ul class="flash">
    <% flash.each do |type, message| %>
      <li class="<%= type %>"><%= t(message) %></li>
    <% end %>
  </ul>
<% end %>

<% if I18n.available_locales.any? %>
  <ul id="languages">
    <% I18n.available_locales.each do |locale| %>
      <li><%= link_to t(locale), {:locale => locale} %></li>
    <% end %>
  </ul>
<% end %>

<%= yield %>

</body>
</html>